<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E6"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hai, Viola Nanda!"
        android:textColor="#4A4A8A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="318dp"
        android:layout_height="314dp"
        app:srcCompat="@drawable/present" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="Kamu Telah Login!!"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- LinearLayout Horizontal untuk tombol -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <!-- Tombol Presensi Masuk -->
        <Button
            android:id="@+id/btn_checkin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#6A1B9A"
            android:text="PRESENSI MASUK"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="12dp" /> <!-- Menambahkan margin end -->

        <!-- Tombol Presensi Pulang -->
        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9C27B0"
            android:text="PRESENSI PULANG"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp" /> <!-- Menambahkan margin start -->
    </LinearLayout>


    <Button
        android:id="@+id/btn_attendance_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8E24AA"
        android:text="RIWAYAT KEHADIRAN"
        android:textColor="#FFFFFF" />

</LinearLayout>
