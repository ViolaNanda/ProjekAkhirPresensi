<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E6"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dashboard_image"
        android:contentDescription="@string/dashboard_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamu Telah Login!!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/btn_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRESENSI MASUK"
        android:backgroundTint="#6A1B9A"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRESENSI PULANG"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_attendance_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RIWAYAT KEHADIRAN"
        android:backgroundTint="#8E24AA"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sekarang Pukul: 06.30"
        android:gravity="center"
        android:paddingTop="16dp" />

</LinearLayout>
