<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6E6"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8E24AA"
        android:padding="12dp"
        android:gravity="center"
        android:text="Presensi Masuk"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Gambar Ilustrasi -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Ilustrasi Presensi"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/illustration" />

    <!-- Tombol Pilih Gambar dan Kamera -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Tombol Galeri -->
        <ImageButton
            android:id="@+id/btn_gallery"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@null"
            android:contentDescription="Pilih Gambar"
            android:src="@drawable/ic_gallery" />

        <!-- Spacer -->
        <View
            android:layout_width="32dp"
            android:layout_height="match_parent" />

        <!-- Tombol Kamera -->
        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@null"
            android:contentDescription="Ambil Foto"
            android:src="@drawable/ic_camera" />
    </LinearLayout>

    <!-- Output Gambar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_rectangle"
        android:gravity="center"/>

    <!-- Input Keterangan -->
    <EditText
        android:id="@+id/input_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Isi Keterangan"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Tombol Kirim -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#8E24AA"
        android:text="KIRIM"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
